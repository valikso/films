.container.pt-3
  .row
    .col-5.offset-3.page_contact_us.text-left
      .page_contact_us__head
        %h6
          For general inquiries, please rech out to us here
        .mt-4
      = form_for @contact_request, url: contact_us_post_path do |f|
        .form-group
          = f.label :user_name, class: 'sr-only'
          = f.text_field :user_name, class: "form-control contact_us__input" , placeholder: 'Your Name'

        .form-group
          = f.label :email, class: 'sr-only'
          = f.email_field :email, class: "form-control contact_us__input" , placeholder: "Your Email"

        .form-group
          = f.label :message, class: 'sr-only'
          = f.text_area :message, class: "form-control contact_us__input" , placeholder: "Your Message"
        .form-group
          = f.submit "Submit", class: 'size08 btn btn-brown btn-contact'
      .page_contact_us__foot.size07
        %p.text-muted.m-0.p-0
          = t('contact_us_page.GENERAL INFORMATION')
        %p.m-0.p-0.pb-3
          -# = GeneralConfig.contact_us_mail
          This text no provide
        %p.text-muted.m-0.p-0
          = t('contact_us_page.YOU CAN ALSO CALL US ON')
        %P
          Telefone
          +34324 432423
