.container.mt-4
  .row
    .col-4.offset-4
      %h2.text-center
        Log in
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .row
          .form-group.col-12
            = f.label :email, class: "sr-only"
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", autofocus: true, autocomplete: "off", class: 'form-control registration-input p-0 size07 rounded-0'
        .row
          .form-group.col-12
            = f.label :password, class: "sr-only"
            = f.password_field :password, autocomplete: "off", placeholder: "Password", autofocus: true, autocomplete: "off", class: 'form-control registration-input p-0 size07 rounded-0'
        .row
          .form-group.col-12
            = f.check_box :remember_me
            = f.label :remember_me
        .form-group.text-center
          = f.submit "Log in", class: 'btn btn-success'
      .text-center
        = render "devise/shared/links"
